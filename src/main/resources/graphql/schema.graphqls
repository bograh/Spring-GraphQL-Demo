type Query {
    users: [User]
    user(id: ID): User
    posts: [Post]
    post(id: ID): Post
}

type User {
    id: ID
    name: String
    email: String
}

type Post {
    id: ID
    title: String
    content: String
    user: User
}

type Mutation {
    createUser(name: String, email: String): User
    createPost(createPostInput: CreatePostInput): Post
}

input CreatePostInput {
    title: String
    content: String
    userId: Int
}